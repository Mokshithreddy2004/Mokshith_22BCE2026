SELECT * FROM WORKER;

SELECT FIRST_NAME, DEPARTMENT 
FROM WORKER 
WHERE SALARY > 20000 AND DEPARTMENT = 'HR';

SELECT LAST_NAME, DEPARTMENT 
FROM WORKER 
WHERE SALARY > 200000 AND DEPARTMENT = 'Admin';

SELECT * 
FROM WORKER 
WHERE (SALARY > 100000 AND SALARY < 300000 AND DEPARTMENT = 'Admin') 
   OR DEPARTMENT = 'Account';

SELECT * 
FROM WORKER 
WHERE (WORKER_ID % 2 = 0) 
  AND (DEPARTMENT IN ('HR', 'Admin')) 
  AND (SALARY = (SELECT MAX(SALARY) FROM WORKER));
